```{r}
# ---- 3.3A: tract with highest % Hispanic ----
top_hispanic_tract <- tract_demo %>%
  dplyr::arrange(dplyr::desc(pct_hispanic)) %>%
  dplyr::slice(1) %>%
  dplyr::select(GEOID, tract_label, county_label,
                total_popE, pct_white_nh, pct_black_nh, pct_hispanic)

